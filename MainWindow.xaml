<Window x:Class="WMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" Margin="6,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D6A9F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F4F73"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2" Background="White" Padding="12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" >
                    <Ellipse Width="36" Height="36" Fill="#2D6A9F" VerticalAlignment="Center">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#66000000" BlurRadius="6" ShadowDepth="1"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource HeaderText}" Text="Quản Lý Hàng hóa" />
                        <TextBlock FontSize="11" Foreground="#666" Text="Kiểm tra và xuất hàng trong kho" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" >
                    <Button Content="Đăng xuất" Margin="6,0" Padding="8,4" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Background="#23374A" Grid.Column="0" Padding="12">
            <DockPanel LastChildFill="True">
                <StackPanel>
                    <TextBlock Text="Menu" Foreground="White" FontWeight="Bold" Margin="6,0,0,8"/>
                    <Button Style="{StaticResource SidebarButtonStyle}"
                        Command="{Binding ShowDashboardViewCommand}">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Tổng quan" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                        Command="{Binding ShowProductViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE14C;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Sản phẩm" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Added Warehouse management under Product -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ShowWarehouseViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7B8;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Quản lý Kho" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                        Command="{Binding ShowInventoryViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C3;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Tồn kho" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ShowCustomerViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE13D;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Khách hàng" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ShowSupplierViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7C3;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Nhà phân phối" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ShowNhapHangViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8CB;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Nhập hàng" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding ShowXuatHangViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8CC;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Xuất hàng" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9D2;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Báo cáo" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Cài đặt" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="6,12"/>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" Margin="6,0" Width="22" Foreground="White"/>
                            <TextBlock Text="Thoát" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Grid.Row="1" Margin="18,0,0,0 ">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>