<UserControl x:Class="WMS.Views.NhapHangView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Background="White" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Orientation="Vertical" Width="360">
                <TextBlock Text="Danh sách phiếu nhập" FontSize="16" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote, Mode=TwoWay}" DisplayMemberPath="NoteID" Margin="0,6"/>

                <TextBlock Text="Nhà cung cấp"/>
                <ComboBox ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}" DisplayMemberPath="SupplierName"/>

                <TextBlock Text="Kho" Margin="0,8,0,0"/>
                <ComboBox ItemsSource="{Binding Warehouses}" SelectedItem="{Binding SelectedWarehouse, Mode=TwoWay}" DisplayMemberPath="WarehouseName"/>

                <TextBlock Text="Ngày phiếu" Margin="0,8,0,0"/>
                <DatePicker SelectedDate="{Binding NoteDate, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Phiếu mới" Width="90" Margin="0,0,8,0" Command="{Binding NewNoteCommand}"/>
                    <Button Content="Lưu" Width="90" Margin="0,0,8,0" Command="{Binding SaveNoteCommand}"/>
                    <Button Content="Cập nhật" Width="90" Margin="0,0,8,0" Command="{Binding UpdateNoteCommand}"/>
                    <Button Content="Xóa" Width="90" Command="{Binding DeleteNoteCommand}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                <TextBlock Text="Thêm chi tiết" FontWeight="Bold"/>
                <TextBlock Text="Sản phẩm"/>
                <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProductForDetail, Mode=TwoWay}" DisplayMemberPath="ProductName" Width="280"/>
                <TextBlock Text="Số lượng" Margin="0,6,0,0"/>
                <TextBox Text="{Binding DetailQuantity, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <TextBlock Text="Đơn giá" Margin="0,6,0,0"/>
                <TextBox Text="{Binding DetailUnitPrice, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Thêm" Width="100" Margin="0,0,8,0" Command="{Binding AddDetailCommand}"/>
                    <Button Content="Xóa" Width="100" Command="{Binding RemoveDetailCommand}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Details}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedDetail, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sản phẩm" Binding="{Binding Product.ProductName}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="120"/>
                <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat=N0}" Width="120"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding LineTotal, StringFormat=N0}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>