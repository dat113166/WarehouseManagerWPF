<UserControl x:Class="WMS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Giao dịch gần đây" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
            <DataGrid ItemsSource="{Binding RecentTransactions}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" Width="*"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding Amount, StringFormat='N0'}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>