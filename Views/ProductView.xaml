<UserControl x:Class="WMS.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WMS.Views"
             mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" Margin="12,12,12,12">
            <StackPanel Orientation="Vertical" Width="300">
                <TextBlock Text="Tên sản phẩm"/>
                <TextBox Text="{Binding NewProductName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Đơn vị" Margin="0,8,0,0"/>
                <TextBox Text="{Binding NewUnit, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Giá" Margin="0,8,0,0"/>
                <TextBox Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Thêm" Width="80" Margin="0,0,8,0" Command="{Binding AddCommand}"/>
                    <Button Content="Xóa rỗng" Width="80" Command="{Binding ClearNewCommand}"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text=" " Width="24"/>

            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                <TextBlock Text="Danh sách sản phẩm" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" AutoGenerateColumns="False" Grid.Row="0" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" IsReadOnly="True" Width="60" />
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                    <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat=N0}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Sửa" Width="80" Margin="0,0,8,0" Command="{Binding UpdateCommand}" />
                <Button Content="Xóa" Width="80" Command="{Binding DeleteCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>